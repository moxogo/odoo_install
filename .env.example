# PostgreSQL Configuration
POSTGRES_DB=postgres
POSTGRES_USER=odoo
POSTGRES_PASSWORD=change-me-in-production
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Odoo Configuration
ODOO_ADMIN_PASSWD=change-me-in-production
ODOO_DB_HOST=db
ODOO_DB_PORT=5432
ODOO_DB_USER=odoo
ODOO_DB_PASSWORD=change-me-in-production
ODOO_PROXY_MODE=True

# Container Configuration
ODOO_IMAGE=odoo:18
POSTGRES_IMAGE=postgres:16
NGINX_IMAGE=nginx:alpine
CERTBOT_IMAGE=certbot/certbot

# Ports (used only in development)
ODOO_PORT=8069
ODOO_LONGPOLLING_PORT=8072
POSTGRES_PORT_FORWARD=5432

# Volumes
ODOO_ADDONS_PATH=/mnt/extra-addons
ODOO_DATA_DIR=/var/lib/odoo
POSTGRES_DATA_DIR=/var/lib/postgresql/data

# Nginx & SSL Configuration
NGINX_DOMAIN=your-domain.com
CERTBOT_EMAIL=your-email@example.com

# Resource Limits (adjust based on your server capacity)
ODOO_CPU_LIMIT=2
ODOO_MEMORY_LIMIT=4G
POSTGRES_CPU_LIMIT=2
POSTGRES_MEMORY_LIMIT=2G
NGINX_CPU_LIMIT=1
NGINX_MEMORY_LIMIT=1G
